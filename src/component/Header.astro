---
import { Image } from "astro:assets";
import Logo from "../assets/918realestatewebsites_logo.svg";
---

<header class="header-wrapper content">
  <div class="header-inner flex flex-col gap-8 sm:flex-row items-center justify-between py-8">
    <div class="logo">
      <a href="/">
        <Image
          src={Logo}
          width={300}
          height={45}
          alt={`918realestatewebsites logo`}
        />
      </a>
    </div>
    <nav class="navigation">
      <button class="btn btn-lg btn-primary">Start Selling Homes</button>
    </nav>
  </div>
</header>
