---
import { Image } from "astro:assets";
import desktopMockup from "../../assets/desktop_mockup.png";
import mobileDesktop from "../../assets/mobile_mockup.png";

const notebook = {
  heading: `Sell More Homes Before the First Showing`,
  body: `We create high converting websites for family owned real estate businesses in Tulsa and Austin to help you close more deals.`,
};
---

<section class="hero py-24">
  <div class="flex flex-wrap items-center space-y-10 lg:space-y-0">
    <div class="stack text-center lg:text-left flex flex-col items-center lg:items-start space-y-4 w-full lg:w-[35%] grow">
      <div class="max-w-[60ch] max-lg:mx-auto  space-y-4">
        <h1 class="font-bold font-display text-5">{notebook.heading}</h1>
        <p class="text-1 text-secondary">{notebook.body}</p>
      </div>
      <div class="btn-row pt-6 flex gap-6 flex-wrap">
        <a
          href="https://cal.com/cmmutale/918realestatewebsites"
          target="_blank"
          class="btn btn-primary btn-lg"
        >
          Start Selling Homes
        </a>
        <a
          target="_blank"
          href="https://tally.so/r/3jE9xE"
          class="btn btn-secondary btn-md">Get Some Free Consultation</a
        >
      </div>
    </div>
    <div class="w-full lg:w-[35%] grow">
      <div class="relative my-auto">
        <Image
          src={desktopMockup}
          width={700}
          alt={`website screenshot`}
          class={`mx-auto`}
        />

        <!-- <Image
        src={mobileDesktop}
        width={200}
        alt={`website screenshot`}
        class={`mx-auto sm:hidden`}
      /> -->
      </div>
    </div>
  </div>
</section>
