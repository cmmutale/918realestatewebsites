---

<section id="benefits" class="wrapper">
  <div class="inner py-24">
    <div class="stack"></div>
    <div class="card-grid grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      {
        benefitsCard.map((card) => (
          <div class="card">
            <div class="card__header" />
            <div class="card__content space-y-4 px-2 text-center">
              <a href={card.cta.url} class="btn btn-lg btn-secondary">
                {card.cta.label}
              </a>
              <h3 class="font-bold text-3 text-center">{card.title}</h3>
              <p>{card.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
