const benefitsCard = [
  {
    title: "We are local",
    description: "We know what buyers want to see",
    cta: {
      label: "📍Serving Tulsa, Oklahoma and Austin, Texas",
      url: "#",
    },
  },
  {
    title: "We are fast",
    description: "Our process is fast, affordable, and completely hands-off for you.",
    cta: {
      label: "📦 Launch your new site in 10–21 days",
      url: "#",
    },
  },
  {
    title: "We are exclusive",
    description: "We only work with a few clients at a time to give you personal attention.",
    cta: {
      label: "💸 Flexible pricing with no hidden fees",
